{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tracker/apps/track-ui/auth": [
        "libs/apps/track-ui/feature/auth/src/index.ts"
      ],
      "@tracker/apps/track-ui/drawer": [
        "libs/apps/track-ui/feature/ui-settings/src/index.ts"
      ],
      "@tracker/apps/track-ui/home": [
        "libs/apps/track-ui/feature/home/src/index.ts"
      ],
      "@tracker/apps/track-ui/models": [
        "libs/apps/track-ui/models/src/index.ts"
      ],
      "@tracker/apps/track-ui/not-found": [
        "libs/apps/track-ui/feature/not-found/src/index.ts"
      ],
      "@tracker/apps/track-ui/stores": [
        "libs/apps/track-ui/stores/src/index.ts"
      ],
      "@tracker/assets": ["libs/assets/src/index.ts"],
      "@tracker/core/configs": ["libs/configs/src/index.ts"],
      "@tracker/core/guards": ["libs/core/guards/src/index.ts"],
      "@tracker/core/interceptors": ["libs/core/interceptors/src/index.ts"],
      "@tracker/core/pipes": ["libs/core/pipes/src/index.ts"],
      "@tracker/core/services": ["libs/core/services/src/index.ts"],
      "@tracker/environments": ["libs/environments/src/index.ts"],
      "@tracker/utils/validations": [
        "libs/core/utils/validations/src/index.ts"
      ],
      "@tracker/utils/wikiquote": ["libs/core/utils/wikiquote/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
